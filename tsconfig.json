{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es6",
        "experimentalDecorators": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true, // 避免在 import 中 使用 as 字符
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
}